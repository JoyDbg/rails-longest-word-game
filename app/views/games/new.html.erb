<div class="container">
  <h1>Countdown</h1>
  <h2>NEW GAME</h2>
  <div class="letters mb-3">
    <% @letters.each do |letter| %>
        <div><%= letter %></div>
    <% end %>
  </div>
  <p>What is the longest word you can find?</p>
  <form action="/score" data-turbo="false" method="post">
    <div class="input-group mb-3">
      <input type="text" class="form-control" name="word">
      <button class="btn btn-primary" type="submit">Play</button>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters_blank %>
  </form>
</div>
